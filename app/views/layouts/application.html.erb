<!DOCTYPE html>
<html>
  <head>
    <title>Site</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  </head>

  <body>
     <!-- Navbar -->
  <nav class="navbar  navbar-expand-lg navbar-light white scrolling-navbar transparent" id="header">
    <div class="container">

      <!-- Brand -->
      <a class="navbar-brand waves-effect">
        <strong class="blue-text">Awad-Ade</strong>
      </a>
      <!-- Collapse -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Links -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <!-- Left -->
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
          <%= link_to 'Home',products_path, class:"nav-link waves-effect" %>
          </li>
        </ul>

        <!-- Right -->
        <ul class="navbar-nav nav-flex-icons">
          <li class="nav-item">
            <a href="<%= cart_path(@current_cart) %>" class="nav-link waves-effect">
              <span class="badge red z-depth-1 mr-1"><%= @current_cart.total%> </span>
              <i class="fa fa-shopping-cart"></i>
              <span class="clearfix d-none d-sm-inline-block"> Cart </span>
            </a>
          </li>
          
          <li class="nav-item">
            <% unless user_signed_in? %>
           <%= link_to 'Sign Up',new_user_registration_path, class:"nav-link border border-light rounded waves-effect", data:{toggle:"modal"} ,data:{target:"#myModal"}%>
           <% else %>
           <%= link_to 'Sign Out',destroy_user_session_path,method: :delete,class:"nav-link border border-light rounded waves-effect", data:{toggle:"modal"} ,data:{target:"#myModal"}%>
           <%end%>
            </a>
            </li>
        </ul>

      </div>

    </div>
  </nav>
  <!-- Navbar -->
 <div style="margin-top: 5%;margin-left: 5%">
  <% flash.each do |key,value|%>
    <div><%= value%></div>
  <%end%>
</div>
  <%= yield %>
  <!--Footer-->
  <footer class="page-footer text-center font-small mt-4 wow fadeIn">
    <div class="footer-copyright py-3">
      Â© 2018 Copyright:
    </div>
    <!--/.Copyright-->

  </footer>
  <!--/.Footer-->

  </body>
</html>
